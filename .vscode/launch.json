{
    "configurations": [
        {
            "name": "Launch via NPM",
            "request": "launch",
            "cwd": "${workspaceFolder}/frontend/",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "watchdog.__main__:app",
                "--reload"
            ],
            "env": {
                "PYTHONPATH": "src"
            },
            "jinja": true
        },
        {
            "name": "Python Debugger: Pytest",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "purpose": [
                "debug-test"
            ],
        },
        {
            "name": "Python Debugger: Watchdog",
            "type": "debugpy",
            "request": "launch",
            "module": "watchdog",
            "cwd": "${workspaceFolder}/src"
        },

    ]
}
